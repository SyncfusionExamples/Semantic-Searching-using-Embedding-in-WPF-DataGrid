<Window x:Class="SemanticSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SemanticSearch"
        mc:Ignorable="d"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        Title="MainWindow" Height="450" Width="700" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="20">
            <TextBlock Text="Smart Filter:" FontWeight="Black"/>
            <TextBox KeyDown="textBox_KeyDown" Width="300" Height="24" x:Name="searchtextBox"/>
            <TextBlock Text="Search Vector:" FontWeight="Black" Padding="10,0,0,0"/>
            <TextBox KeyDown="vectortextBox_KeyDown" Text="0.55"  Width="150" Height="24" x:Name="vectortextBox"/>
        </StackPanel>
        <syncfusion:SfDataGrid Margin="30,20, 30, 20" Grid.Row="1" x:Name="grid" ColumnSizer="Star" AutoGenerateColumns="True" HeaderRowHeight="28"/>
        
    </Grid>
</Window>
